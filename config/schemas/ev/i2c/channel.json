{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file://i2c/channel.json",
  "type": "object",
  "properties": {
    "label": {
      "enum": [
        "SCL",
        "SDA"
      ]
    },
    "source": {
      "type": "number",
      "minimum": 1,
      "maximum": 16
    },
    "probe": {
      "enum": [
        "x10",
        "direct-in"
      ],
      "default": "x10"
    }
  },
  "required": [ "label", "source", "probe" ],
  "additionalProperties": false
}

  