{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file://i2c/validation.json",
  "title": "I2C validation specification configuration",
  "examples": [
    {
      "general": {
        "workingVoltage": 3300,
        "speedMode": "Standard Mode"
      },
      "specification": {
        "frequency": [
          {
            "name": "f_SCL",
            "enable": true,
            "minimum": 0,
            "maximum": 1000000
          }
        ],
        "time": [
          {
            "name": "t_HD_STA",
            "enable": false,
            "minimum": 0,
            "maximum": 1000
          }
        ]
      }
    }
  ],
  "type": "object",
  "properties": {
    "advance": {
      "$ref": "file://common/advance.json"
    },
    "general": {
      "type": "object",
      "properties": {
        "workingVoltage": {
          "description": "Working voltage of the I2C bus. Unit: mV",
          "type": "number",
          "default": 3300
        },
        "speedMode": {
          "description": "Speed modes of the I2C bus.",
          "type": "string",
          "enum": [
            "Standard Mode",
            "Fast Mode",
            "Fast Mode Plus",
            "High Speed Mode"
          ],
          "default": "Standard Mode"
        }
      },
      "additionalProperties": false
    },
    "specification": {
      "type": "object",
      "properties": {
        "frequency": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "Label name of the frequency specification.",
                "type": "string",
                "enum": [ "f_SCL" ]
              },
              "enable": {
                "type": "boolean"
              },
              "minimum": {
                "description": "Minimum requirements for the frequency specification. Units: Hz",
                "type": "number"
              },
              "maximum": {
                "description": "Maximum limit for the frequency specification. Units: Hz",
                "type": "number"
              }
            },
            "required": [ "name" ],
            "additionalProperties": false
          }
        },
        "time": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "Label name of the timing specification",
                "type": "string",
                "enum": [
                  "t_HD_STA",
                  "t_SU_STA",
                  "t_HD_DAT",
                  "t_SU_DAT",
                  "t_SU_STO",
                  "t_LOW",
                  "t_HIGH",
                  "t_rCL",
                  "t_rDA",
                  "t_BUF",
                  "t_VD_DAT",
                  "t_VD_ACK",
                  "t_CLK_Stretch"
                ]
              },
              "enable": {
                "type": "boolean"
              },
              "minimum": {
                "description": "Minimum requirements for the timing specification. Unit: ns",
                "type": "number"
              },
              "maximum": {
                "description": "Maximum limit for the timing specification. Unit: ns",
                "type": "number"
              }
            },
            "required": [ "name" ],
            "additionalProperties": false
          }
        },
        "voltage": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "Label name of the voltage specification",
                "type": "string",
                "enum": [ "V_Low", "V_High" ]
              },
              "enable": {
                "type": "boolean"
              },
              "minimum": {
                "description": "Minimum requirements for the voltage specification. Unit: mV",
                "type": "number"
              },
              "maximum": {
                "description": "Maximum limit for the voltage specification. Unit: mV",
                "type": "number"
              }
            },
            "required": [ "name" ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
