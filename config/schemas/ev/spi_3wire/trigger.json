{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file://spi_3wire/trigger.json",
  "title": "3-wire SPI trigger configuration",
  "examples": [
    {
      "dataPin": "SDA",
      "fixedOffset": {
        "enable": false
      }
    }
  ],
  "type": "object",
  "properties": {
    "dataPin": {
      "default": "SDA",
      "enum": [
        "SDA"
      ]
    },
    "fixedOffset": {
      "object": "object",
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "value": {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 4095
        }
      },
      "required": [ "enable" ],
      "additionalProperties": false
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "default": "XXh",
            "pattern": "^[0-9A-FX]{1,4}h"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "maxItems": 8
    }
  },
  "additionalProperties": false
}
